<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/star_shape_checked" /> <!-- pressed -->
    <item android:state_hovered="true"
        android:drawable="@drawable/star_shape_checked" /> <!-- hovered -->
    <item android:state_activated="true"
        android:drawable="@drawable/star_shape_checked" />
    <item android:state_activated="false"
        android:drawable="@drawable/star_shape_unchecked" />
    <item android:drawable="@drawable/star_shape_unchecked" /> <!-- default -->
</selector>